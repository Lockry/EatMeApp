<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- При нажатии -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#868981" /> <!-- Цвет при нажатии -->
            <stroke android:width="1dp" android:color="#305E1D" />
        </shape>
    </item>

    <!-- По умолчанию -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FDFDF3" />
            <stroke android:width="1dp" android:color="#305E1D" />
        </shape>
    </item>

</selector>
